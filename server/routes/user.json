{
  "middleware": ["ensureLoggedIn"],
  "path": "/api/users",
  "routes": [
    {
      "path": "",
      "method": "get",
      "handler": "getUsers"
    },
    {
      "path": ":id",
      "method": "get",
      "handler": "getUsers"
    },
    {
      "path": "profile",
      "method": "post",
      "handler": "updateProfile"
    },
    {
      "path": ":id/approve",
      "method": "post",
      "handler": "approveUser",
      "acl": {
        "role": "ADMIN"
      }
    },
    {
      "path": "lenders/list",
      "method": "get",
      "handler": "getLenders",
      "acl": {
        "role": "ADMIN"
      }
    }
  ]
}