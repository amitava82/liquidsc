{
  "middleware": [
    "ensureLoggedIn"
  ],
  "path": "/api/accounts",
  "routes": [
    {
      "path": "",
      "method": "get",
      "handler": "getAccounts",
      "acl": {
        "role": ["ADMIN", "BORROWER", "LENDER"]
      }
    },
    {
      "path": ":id",
      "method": "get",
      "handler": "getAccount",
      "acl": {
        "role": "ADMIN"
      }
    },
    {
      "path": ":id",
      "method": "put",
      "handler": "updateAccount",
      "acl": {
        "role": "ADMIN"
      }
    },
    {
      "path": ":id/settle",
      "method": "put",
      "handler": "settle",
      "acl": {
        "role": "ADMIN"
      }
    }
  ]
}